<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!--add icon for app-->
    <title>@ViewData["Title"]</title>

    <link href="~/stylesheets/bootstrap.min.css" rel="stylesheet" />
    <link href="~/stylesheets/_Layout.min.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #24292e">
        <a asp-action="Index" asp-controller="Home" class="navbar-brand navbar__logo">
            <svg height="32" viewBox="0 0 16 16" version="1.1" width="32" aria-hidden="true">
                <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z">
                </path>
            </svg>
        </a>

        <button class="navbar-toggler pull-left" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item small font-weight-bold">
                    <a asp-action="About" asp-controller="Home" class="nav-link text-white" style="font-size:14px">
                        About
                    </a>
                </li>
                <li class="nav-item small font-weight-bold">
                    <a asp-action="Contacts" asp-controller="Home" class="nav-link text-white" style="font-size:14px">
                        Contacts
                    </a>
                </li>
            </ul>
            <div class="dropdown float-right">
                <button class="btn btn-default dropdown-toggle text-white lead" type="button" id="dropddownMenu" data-toggle="dropdown">
                    <span style="font-size:26px">+</span>
                    <span class="caret align-middle"></span>
                </button>
                <ul class="dropdown-menu text-white pull-right dropdown-menu-right mr-auto" aria-labelled-by="dropddownMenu">
                    <li>
                        <a asp-action="About" asp-controller="Home" class="nav-link navbar__li">
                            New repository
                        </a>
                    </li>
                </ul>
                <button class="btn btn-default dropdown-toggle text-white lead" type="button" id="dropddownMenu" data-toggle="dropdown">
                    <span style="font-size:24px">
                        <img src="~/images/icon.jpg" width="24px" height="24px" alt="Alternate Text" />
                    </span>

                    <span class="caret align-middle"></span>
                </button>
                <ul class="dropdown-menu text-white pull-right dropdown-menu-right mr-auto" aria-labelled-by="dropddownMenu">
                    <li>
                        <a asp-action="About" asp-controller="Home" class="nav-link navbar__li">
                            New repository
                        </a>
                    </li>
                </ul>
            </div>
        </div>

    </nav>

    @RenderBody()


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
</body>
</html>