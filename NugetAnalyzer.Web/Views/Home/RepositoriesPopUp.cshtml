@model IEnumerable<NugetAnalyzer.BLL.Models.Repositories.RepositoryChoice>

<div class="modal show" id="new-repository-pop-up" style="display: block">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title font-weight-bold">Add your repositories</h2>
            </div>
            <div class="modal-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th></th>
                            <th>Branch</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var repository in Model)
                        {
                            <tr>
                                <td>@repository.Name</td>
                                <td><input type="checkbox" value="@repository.Id" style="transform: scale(1.5)" /></td>
                                <td>default</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-dark">Add</button>
            </div>
        </div>
    </div>
</div>
<div class="modal-backdrop show"></div>