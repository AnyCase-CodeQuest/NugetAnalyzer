@model NugetAnalyzer.DTOs.Models.UserRegisterModel
@{
    ViewData["Title"] = Localizer["UserCreationForm"];
    Layout = "_SignInLayout";
}

<div class="row h-100 justify-content-center align-items-center">

    <form asp-controller="Account" asp-action="CreateUser" method="post" class="col-md-3">
        <input type="text" asp-for="SourceId" hidden="hidden" />
        <input type="text" asp-for="Url" hidden="hidden" />
        <input type="text" asp-for="AvatarUrl" hidden="hidden" />
        <input type="text" asp-for="AccessToken" hidden="hidden" />
        <input type="text" asp-for="ExternalId" hidden="hidden" />
        <div class="text-center mt-5">
            <a asp-controller="Home" asp-action="Index" class="mb-4">
                <svg height="64" viewBox="0 0 16 16" version="1.1" width="64" aria-hidden="true" class="mb-2">
                    <path xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" d="M8.06 2C3 2 0 8 0 8s3 6 8.06 6C13 14 16 8 16 8s-3-6-7.94-6zM8 12c-2.2 0-4-1.78-4-4 0-2.2 1.8-4 4-4 2.22 0 4 1.8 4 4 0 2.22-1.78 4-4 4zm2-4c0 1.11-.89 2-2 2-1.11 0-2-.89-2-2 0-1.11.89-2 2-2 1.11 0 2 .89 2 2z" />
                </svg>
            </a>
            <h5 class="mb-2">@Localizer["SignUp message"]</h5>
        </div>

        <div class="form-group">
            <div>@Localizer["Username"]</div>
            <input type="text" asp-for="UserName" class="form-control" />
        </div>

        <div class="form-group">
            <div>@Localizer["Email"]</div>
            <input type="text" asp-for="Email" class="form-control" />
        </div>

        <input type="submit" value=@Localizer["Submit"] class="btn btn-success w-100" />
    </form>
</div>
